<%= form_with model: @article do |f| %>

  <% if user_signed_in? %>
  
  <label> Enter your article title </label>
  <%= f.text_field :title %><br/><br/>

  <label> Say something about your article </label>
  <%= f.text_field :body %><br/><br/>

  <label> Which category this articles belongs to:  </label>
  <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "Select Category" %><br/><br/>

  <label> Publish date:  </label>
  <%= f.date_field :publish_date, order: [:day, :month, :year] %><br/><br/>

  <%= f.label :feature_image_url %>
  <%= f.file_field :feature_image_url %><br/><br/>
  
  <%= f.submit %>


  <% else %>  
    <p> You must sign in inorder to post an article </p> 
  <% end %>

<% end %>