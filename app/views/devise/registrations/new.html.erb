<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %> <span id="unameError"> </span>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :mobile %><br />
    <%= f.text_field :mobile %>
  </div>

  <div class="field">
    <%= f.label :gender %><br />
    <%= f.text_field :gender %>
  </div>

    <div class="field">
    <%= f.label :dob %><br />
    <%= f.date_field :dob %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<script>
 var email = document.getElementById('user_email');
 var form = document.getElementById('new_user');
 var username = document.getElementById('user_username');
 var mobile = document.getElementById('user_mobile');
 var gender = document.getElementById('user_gender');
 var dob = document.getElementById('user_dob');

 var unameError = document.getElementById('unameError');
//  var 

  form.addEventListener('submit',function(e){
    if username.value === ""{
      unameError.innerHTML = "Username cannot be empty";
      e.preventDefault();
    }else{
      unameError.innerHTML = "";
    }
      },false);
</script>
